{
	"comments": {
		"blockComment": ["{*", "*}"]
	},
	"brackets": [
		["{", "}"],
		["[", "]"],
		["(", ")"]
	],
	"autoClosingPairs": [
		{ "open": "{", "close": "}" },
		{ "open": "[", "close": "]" },
		{ "open": "(", "close": ")" },
		{ "open": "'", "close": "'", "notIn": ["string", "comment"] },
		{ "open": "\"", "close": "\"", "notIn": ["string"] }
	],
	"surroundingPairs": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		["'", "'"],
		["\"", "\""]
	],
	"folding": {
		"markers": {
			"start": "^\\s*{(block|capture|for|foreach|function|if|literal|section|setfilter|strip|while)\\b.+}",
			"end": "^\\s*{/(block|capture|for|foreach|function|if|literal|section|setfilter|strip|while)\\b}"
		}
	},
	"indentationRules": {
		"increaseIndentPattern": "^\\s*{(block|capture|for|foreach|function|if|literal|section|setfilter|strip|while)\\b.+}",
		"decreaseIndentPattern": "^\\s*{/(block|capture|for|foreach|function|if|literal|section|setfilter|strip|while)\\b}"
	}
}
